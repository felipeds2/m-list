{
  "fields": [
    {
      "name": "channel",
      "type": "text",
      "placeholder": "channel_placeholder",
      "min-length": 3,
      "max-length": 255,
      "required": true
    },
    {
      "name": "videos",
      "type": "select",
      "required": true,
      "placeholder": "videos_list_placeholder",
      "values": {
        "upload": "upload",
        "favorites": "favorites",
        "playlist": "playlist",
      },
      "on-change": {
        "before" : {
          "playlist": "hide"
        },
        "playlist": {
          "playlist": "show"
        }
      }
    },
    {
      "name": "playlist",
      "type": "select",
      "placeholder": "playlist_list_placeholder",
      "values": "getChannelPlaylists(channel)"
    }
  ]
}
